// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  name     String?
  email    String  @unique
  password String
  notes    Note[]

  @@map("users")
}

model Note {
  id      String  @id @default(uuid())
  title   String
  content String?
  user    User    @relation(fields: [user_id], references: [id])
  user_id String

  @@map("notes")
}
